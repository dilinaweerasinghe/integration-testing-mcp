{
  "name": "@dilina0914/openapi-mcp",
  "version": "1.0.0",
  "description": "MCP server for parsing OpenAPI specifications and extracting Cloud ERP service metadata",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "openapi-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "openapi",
    "swagger",
    "api-discovery",
    "ifs",
    "service-metadata"
  ],
  "author": "Dilina Weerasinghe",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/dilinaweerasinghe/integration-testing-mcp.git",
    "directory": "packages/mcps/openapi-mcp"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@readme/openapi-parser": "^2.6.0",
    "openapi-types": "^12.1.3",
    "yaml": "^2.4.5",
    "zod": "^3.23.8",
    "pino": "^8.21.0"
  },
  "devDependencies": {
    "@ifs/logging": "workspace:*",
    "@ifs/mcp-core": "workspace:*",
    "@ifs/security": "workspace:*",
    "@types/node": "^20.14.0",
    "rimraf": "^5.0.7",
    "tsup": "^8.5.1",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
